@model TarefaViewModel

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10">
        <table class="table">
            <thead>
                <tr class="table-primary">
                    <th scope="col">Id</th>
                    <th scope="col">Descrição</th>
                    <th scope="col">Data Criação</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.TarefaList)
                {
                <tr>
                    <th class="todos-column" scope="row">@t.Id</th>
                    <td class="todos-column">@t.Descricao</td>
                    <td class="todos-column">@t.DtCriacao</td>
                    <td class="buttons-column">
                        <input type="submit" class="btn btn-danger" value="Excluir" onClick="deleteTarefa(@t.Id)" />
                        <input type="submit" class="btn btn-primary" value="Alterar" onClick="updateTarefa(@t.Id)" />
                    </td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>